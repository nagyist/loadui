<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>loadui-project</artifactId>
        <groupId>com.eviware.loadui</groupId>
        <version>2.7.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>loadui-fx-interface</artifactId>
    <packaging>bundle</packaging>
    <name>loadUI JavaFX 2 Interface</name>
    <description>loadUI Graphical User Interface implemented in JavaFX 2</description>

    <profiles>
        <profile>
            <id>gui-tests</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <version>2.14.1</version>
                        <configuration>
                            <forkMode>always</forkMode>
                            <groups>org.loadui.testfx.categories.TestFX</groups>
                            <failIfNoTests>false</failIfNoTests>
                            <testFailureIgnore>false</testFailureIgnore>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.14.1</version>
                <configuration>
                    <excludedGroups>org.loadui.testfx.categories.TestFX</excludedGroups>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${mavenBundlePluginVersion}</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Activator>com.eviware.loadui.ui.fx.JavaFXActivator</Bundle-Activator>
                        <Export-Package>com.eviware.loadui.ui.fx*</Export-Package>
                        <Embed-Dependency>*;scope=provided</Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <configuration>
                            <target xmlns:fx="javafx:com.sun.javafx.tools.ant">
                                <taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
                                         uri="javafx:com.sun.javafx.tools.ant">
                                    <classpath>
                                        <pathelement location="${env.JAVA_HOME}/lib/ant-javafx.jar"/>
                                        <pathelement location="${env.JAVA_HOME}/jre/lib/ext/jfxrt.jar"/>
                                    </classpath>
                                </taskdef>

                                <fx:csstobin outdir="${basedir}/target/classes">
                                    <fileset dir="src/main/java" includes="**/*.css"/>
                                </fx:csstobin>

                                <fx:csstobin outdir="${basedir}/target/classes">
                                    <fileset dir="src/main/resources" includes="**/*.css"/>
                                </fx:csstobin>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/*.css</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.fxml</include>
                    <include>**/*.png</include>
                </includes>
            </resource>
        </resources>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>${osgiVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.miglayout</groupId>
            <artifactId>miglayout-core</artifactId>
            <version>4.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.miglayout</groupId>
            <artifactId>miglayout-javafx</artifactId>
            <version>4.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.eviware.loadui</groupId>
            <artifactId>loadui-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.eviware.loadui</groupId>
            <artifactId>loadui-fx-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.eviware.loadui</groupId>
            <artifactId>loadui-utils</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.eviware.loadui</groupId>
            <artifactId>loadui-layout</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.eviware.loadui</groupId>
            <artifactId>loadui-reporting</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>2.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>com.springsource.org.apache.commons.codec</artifactId>
            <version>1.4.0</version>
        </dependency>
        <dependency>
            <groupId>com.eviware.loadui</groupId>
            <artifactId>loadui-test-utils</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.eviware.loadui</groupId>
            <artifactId>loadui-fx-test-utils</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.eviware.loadui</groupId>
            <artifactId>loadui-base</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.eviware.loadui</groupId>
            <artifactId>loadui-model-xmlbeans</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.loadui</groupId>
            <artifactId>testFx</artifactId>
            <version>${testFxVersion}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
